<% layout('layouts/boilerplate')%>
    <div class="container">
        <h1>ALL BOOKSTORES</h1>
        <div>
            <a href="/bookstores/new"><button class="btn btn-success addButton">+ ADD OWN BOOKSTORE</button></a>
        </div>
        <br>
            <% for (let bookstore of bookstores){%>
                <div class="card" mb-3>
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" alt="" src="<%=bookstore.image%>">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= bookstore.title %> </h5>
                                <p class="card-text"><%= bookstore.description %></p>
                                <p class="card-text">
                                    <small class="text-muted"><%= bookstore.location%></small>
                                </p>
                                <a class="btn btn-primary viewButton" href="/bookstores/<%=bookstore._id%>">View <%=bookstore.title%></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }%>
    </div>

