<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">NEW BOOKSTORE</h1>
    <div class="col-6 offset-3">
        <form action="/bookstores" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="bookstore[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="bookstore[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="bookstore[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Bookstore Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="bookstore[price]">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="bookstore[description]"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success addButton">+ ADD BOOKSTORE</button>
            </div>
        </form>
        <a href="/bookstores"><button class="btn btn-primary viewButton">SHOW ALL BOOKSTORES</button></a>
    </div>
</div>
